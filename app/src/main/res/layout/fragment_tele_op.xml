<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.tinmints.scouting.TeleOpFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginBottom="0dp" >
        <LinearLayout
            android:background="@color/yellow"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/team_number"/>

            <TextView
                android:id="@+id/team_num"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginBottom="0dp">
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Gears: "/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Delivered: "/>
                <Button
                    android:id="@+id/tele_deliver_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-" />
                <TextView
                    android:id="@+id/tele_deliver"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <Button
                    android:id="@+id/tele_deliver_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Pickup: "/>
                <Button
                    android:id="@+id/tele_picked_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-" />
                <TextView
                    android:id="@+id/tele_picked"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />
                <Button
                    android:id="@+id/tele_picked_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />

            </TableRow>
            <TableRow
                android:id="@+id/pickup_row">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" "/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Got: "/>
                <Button
                    android:id="@+id/tele_got_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_got"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <Button
                    android:id="@+id/tele_got_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Boiler: "/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Low: "/>
                <Button
                    android:id="@+id/tele_low_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_low"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <Button
                    android:id="@+id/tele_low_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="High: "/>
                <Button
                    android:id="@+id/tele_high_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_high"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <Button
                    android:id="@+id/tele_high_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/fuel_row">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fuel: "/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Station: "/>
                <Button
                    android:id="@+id/tele_station_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_station"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <Button
                    android:id="@+id/tele_station_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Floor: "/>
                <Button
                    android:id="@+id/tele_floor_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_floor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <Button
                    android:id="@+id/tele_floor_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Other: "/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Pilot Rate: "/>
                <Button
                    android:id="@+id/tele_pilot_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_pilot"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />
                <Button
                    android:id="@+id/tele_pilot_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Fouls: "/>
                <Button
                    android:id="@+id/tele_fouls_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_fouls"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />
                <Button
                    android:id="@+id/tele_fouls_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
            </TableRow>
        </TableLayout>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginBottom="0dp">
            <TableRow
                android:id="@+id/hopper_row">
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Hoppers: "/>
                <Button
                    android:id="@+id/tele_hoppers_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    />
                <TextView
                    android:id="@+id/tele_hoppers"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <Button
                    android:id="@+id/tele_hoppers_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    />
            </TableRow>
        </TableLayout>
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginBottom="0dp">
            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Lifts: "/>
                <ToggleButton
                    android:layout_weight="1"
                    android:id="@+id/tele_lifts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOff="N"
                    android:textOn="Y"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Broke Down: "/>
                <ToggleButton
                    android:layout_weight="1"
                    android:id="@+id/tele_brokedown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOff="N"
                    android:textOn="Y"/>
            </TableRow>
            <TableRow
                android:id="@+id/rotor_row">
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Rotors: "/>
                <Spinner android:id="@+id/tele_rotors"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Recovered: "/>
                <ToggleButton
                    android:layout_weight="1"
                    android:id="@+id/tele_recover"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOff="N"
                    android:textOn="Y"/>
            </TableRow>
            <TableRow
                android:id="@+id/play_row">

                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Offense: "/>
                <ToggleButton
                    android:layout_weight="1"
                    android:id="@+id/tele_offense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOff="N"
                    android:textOn="Y"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Defense: "/>
                <ToggleButton
                    android:layout_weight="1"
                    android:id="@+id/tele_defense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOff="N"
                    android:textOn="Y"/>
            </TableRow>
            <TableRow
                android:id="@+id/y_c">
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text="Yellow Card: "/>
                <ToggleButton
                    android:layout_weight="1"
                    android:id="@+id/tele_yellow_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textOff="N"
                    android:textOn="Y"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text=" "/>
                <TextView
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:text=" "/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</FrameLayout>
